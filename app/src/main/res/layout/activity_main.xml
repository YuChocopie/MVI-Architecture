<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.yuchoco.mvi_architecture.MainViewModel" />

        <variable
            name="mainVM"
            type="MainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <EditText
            android:id="@+id/etText1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="136dp"
            android:lines="1"
            android:text="@={mainVM.searchText1}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/btnMult"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginTop="24dp"
            android:onClick="@{()->mainVM.setMultiplcation()}"
            android:src="@drawable/ic_multiplication"
            app:layout_constraintEnd_toStartOf="@+id/btnDivision"
            app:layout_constraintStart_toStartOf="@id/etText1"
            app:layout_constraintTop_toBottomOf="@id/etText1" />

        <ImageView
            android:id="@+id/btnDivision"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:onClick="@{()->mainVM.setDivision()}"
            android:src="@drawable/ic_division"
            app:layout_constraintEnd_toEndOf="@+id/etText1"
            app:layout_constraintStart_toEndOf="@id/btnMult"
            app:layout_constraintTop_toTopOf="@id/btnMult" />

        <EditText
            android:id="@+id/etText2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:lines="1"
            android:text="@={mainVM.searchText2}"
            app:layout_constraintEnd_toEndOf="@id/etText1"
            app:layout_constraintStart_toStartOf="@id/etText1"
            app:layout_constraintTop_toBottomOf="@id/btnDivision" />


        <TextView
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_marginTop="36dp"
            android:background="#ededed"
            android:text="@{mainVM.data.testText}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etText2" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>